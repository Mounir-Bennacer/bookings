{% extends "bookings/settings/_layout" %}
{% set title = "Booking Fields"|t('bookings') %}
{% set selectedItem = "bookingsettings" %}
{% set fullPageForm = true %}

{% import "_includes/forms" as forms %}

{% block content %}
	<input type="hidden" name="action" value="bookings/booking-settings/save">
	{{ redirectInput('bookings/settings/bookingsettings') }}

	{{ csrfInput() }}
	{% if bookingSettings.id %}
	<input type="hidden" name="bookingSettingsId" value="{{ bookingSettings.id }}">
	{% endif %}

	{% include "_includes/fieldlayoutdesigner" with {
		fieldLayout: bookingSettings.getFieldLayout(),
	} only %}
{% endblock %}