{% extends 'bookings/_layout' %}

{% set selectedSubnavItem = 'settings' %}
{% set bodyClass = (bodyClass is defined ? bodyClass~' ' : '') ~ 'bookings-settings' %}

{% set hasTitle = title is defined %}
{% set title = hasTitle ? title : 'Settings'|t('bookings') %}

{% set navItems = {} %}

{% if currentUser.admin %}
	{% set navItems = {
		'eventtypes': { title: 'Event Types'|t('bookings') },
	} %}
{% endif %}

{% if selectedItem is not defined %}
	{% set selectedItem = craft.app.request.getSegment(3) %}
{% endif %}

{% set docTitle = hasTitle ? title ~ ' - ' ~ navItems[selectedItem].title : navItems[selectedItem].title ~ ' - ' ~ title %}

{% block sidebar %}
	<nav>
		<ul>
			{% for id, item in navItems %}
				{% if item.heading is defined %}
					<li class="heading"><span>{{ item.heading }}</span></li>
				{% else %}
					<li>
						<a href="{{ url('bookings/settings/' ~ id) }}"{% if id == selectedItem %} class="sel"{% endif %}>
							{{ item.title }}
						</a>
					</li>
				{% endif %}
			{% endfor %}
		</ul>
	</nav>
{% endblock %}
